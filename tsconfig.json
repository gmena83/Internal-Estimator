{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "incremental": true,
    "jsx": "react-jsx",
    "paths": {
      "@shared/*": ["./packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules"]
}
