{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/api/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/web/$1"
    }
  ],
  "builds": [
    {
      "src": "apps/api/api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ]
}
